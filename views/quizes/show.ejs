<form method="get" action="/quizes/<%= quiz.id %>/answer">

Pregunta: <%= quiz.pregunta %> <p>

<input type="text" name="respuesta" value="Respuesta" onFocus="this.value=''"/>
<input type="submit" value="Enviar">
</form>

<p><a href="/quizes/<%= quiz.id %>/comments/new"><button>Añadir comentario</button></a></p>

<p><strong>Comentarios</strong></p>
<%for (index in quiz.Comments) {%>
<!--El comentario solo se ve si está publicado o el usuario está autenticado-->
	<% if(quiz.Comments[index].publicado || session.user){%>
		<p>- <%= quiz.Comments[index].texto %>
	<% if (session.user && !quiz.Comments[index].publicado) {%>
		<a href="/quizes/<%= quiz.id %>/comments/<%= quiz.Comments[index].id %>/publish">
			<button>Publicar</button></a>
	<%}%>
</p>
<%}%>
<%}%>