    <form method="get" action="/quizes">
    	<label>Tema </label>
    <select id="tema" name="quizes[tema]" value="<%= quizes.tema %>"
	<option value="humanidades"
	<% if (quizes.tema=="humanidades"||"Humanidades") { %> selected <% } %>
	>Humanidades</option>
	<option value="ocio"
	<% if (quizes.tema=="ocio"||"Ocio") { %> selected <% } %>
	>Ocio</option>
	<option value="ciencia"
	<% if (quizes.tema=="ciencia"||"Ciencia") { %> selected <% } %>
	>Ciencia</option>
	<option value="tecnologia"
	<% if (quizes.tema=="tecnologia"||"Tecnología") { %> selected <% } %>
	>Tecnología</option>
	<option value="otro"
	<% if (quizes.tema=="otro"||"Otro") { %> selected <% } %>
	>Otro</option>
	<input type="submit">
</select><br><br>
</form>

<table>
	<% var i; for (i=0; i < quizes.length; i++) { %>
		<tr>
			<td>
				<a href="quizes/<%= quizes[i].id %>"><%= quizes[i].tema %></a>
			</td>
			<td>
				<a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
			</td>
			<td>
				<a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a>
			</td>
			<td>
				<form method='post' action='quizes/<%= quizes[i].id %>?_method=delete'>
					<button type='submit' onClick='return confirm("Borrar: <%= quizes[i].pregunta %>");'>borrar</button>
				</form>
		</tr>
		<% } %>
</table><p>
<a href = "/quizes/new"><button type"button">Crear pregunta</button></a>
